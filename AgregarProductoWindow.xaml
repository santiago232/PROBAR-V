<Window x:Class="ProyectoFinal4.AgregarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Producto" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Nombre del Producto:"/>
            <TextBox x:Name="txtNombreProducto" Width="200"/>

            <TextBlock Text="Cantidad:"/>
            <TextBox x:Name="txtCantidadProducto" Width="200"/>

            <TextBlock Text="Precio de Compra:"/>
            <TextBox x:Name="txtPrecioCompra" Width="200"/>

            <TextBlock Text="Precio de Venta:"/>
            <TextBox x:Name="txtPrecioVenta" Width="200"/>

            <TextBlock Text="Fecha de Caducidad:"/>
            <DatePicker x:Name="dpFechaCaducidad" Width="200"/>

            <TextBlock Text="Número de Lote:"/>
            <TextBox x:Name="txtNumeroLote" Width="200"/>

            <Button Content="Agregar Producto" Click="AgregarProducto_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
